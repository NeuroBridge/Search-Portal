{
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "babelOptions": {
      "configFile": "./babel.config.js"
    }
  },
  "env": {
    "es6":   true,
    "browser": true,
    "node":  true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off"
  }
}
